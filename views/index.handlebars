<body>
  <div class="container">
    <div class="text-center mb-3" style="margin-top:100px;">
      <a href="/"><img src="assets/images/logo.png" width="80%" alt=""></a>
    </div>
    <div class="text-center">
      <a href="" class="btn btn-outline-primary px-3 page-scroll" id="login" data-toggle="modal"
        data-target=".bd-example-modal-md" style="margin-right:10px; width:35%">LOGIN</a>
      <a href="" class="btn btn-outline-primary px-3 page-scroll" id="sign-up" data-toggle="modal"
        data-target=".bd-example-modal-md" style="width:35%">SIGN UP</a>
    </div>


    <div class="modal fade bd-example-modal-md" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-md">
        <div class="modal-content" style="background-color: #252830; padding:20px;">
          <div class="text-center">
            <a href="/home"><img src="assets/images/logo.png" width="30%" alt=""></a>
          </div>
          <ul class="nav nav-bordered mt-4 mt-md-2 mb-0 clearfix text-center" role="tablist">
            <li class="nav-item opt_1" role="presentation">
              <a href="#budget" class="nav-link active" role="tab" data-toggle="tab" id="label_one"
                aria-controls="budget">SIGN-UP</a>
            </li>
            <li class="nav-item opt_2" role="presentation">
              <a href="#expenses" class="nav-link" role="tab" data-toggle="tab" id="label_two"
                aria-controls="expenses">LOGIN</a>
            </li>
          </ul>

          <hr class="mt-0 mb-5">

          <div class="tab-content">
            <div role="tabpanel" class="tab-pane budget_a" id="budget">

              <div role="tabpanel" class="tab-pane budget_a" id="budget">
                {{>register}}
              </div>
            </div>

            <div role="tabpanel" class="tab-pane expense_a" id="expenses">
              <div role="tabpanel" class="tab-pane  expense_b" id="expenses">
                {{>login}}
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
</body>

<script src="/assets/js/signup.js"></script>
<script src="/assets/js/login.js"></script>

<script>
  $("#login").on("click", function () {
    $(".budget_a").removeClass("active");
    $(".budget_b").addClass("active");
    $(".expense_a").addClass("active");
    $(".expense_b").removeClass("active");
    $("#label_one").removeClass("active")
    $("#label_two").addClass("active")

  })

  $("#sign-up").on("click", function () {
    $(".budget_a").addClass("active");
    $(".budget_b").removeClass("active");
    $(".expense_a").removeClass("active");
    $(".expense_b").addClass("active");
    $("#label_two").removeClass("active")
    $("#label_one").addClass("active")
  })





</script>