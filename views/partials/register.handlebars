<div id="registration-container" class="container-fluid">
  <section class="container">
    <div class="container-page">
      <div class="col-md-6">
        <h3 class="dark-grey">Registration</h3>

        <div id="username-form" class="form-group col-lg-12">
          <label>Username</label>
          <input type="" name="" class="form-control" id="username-input" value="">
          <small id="username-feedback" class=""></small>
        </div>

        <div id="firstname-form" class="form-group col-lg-12">
          <label>First name</label>
          <input type="" name="" class="form-control" id="firstname-input" value="">
          <small id="firstname-feedback" class=""></small>
        </div>

        <div id="lastname-form" class="form-group col-lg-12">
          <label>Last name</label>
          <input type="" name="" class="form-control" id="lastname-input" value="">
          <small id="lastname-feedback" class=""></small>
        </div>

        <!-- Restorant Name -->
        <div id="restaurant-form" class="form-group col-lg-12">
          <select class="form-control option placeholder_color" id="restaurant-input">
            <option selected="selected">Select A Restaurant</option>
            <option>example_1</option>
            <option>example_2</option>
            <option>example_3</option>
            <option>Add More</option>
          </select>
          <small id="restaurant-feedback" class="inv_feedback"></small>
        </div>

        <!-- Add restorant display none -->
        <div id="addRestaurant-form" class="form-group col-lg-12 display_node">
          <input placeholder="Add Restaurant" type="text" class="form-control" id="addRestaurant-input" value="">
          <small id="addRestaurant-feedback" class="inv_feedback"></small>
        </div>

        <div id="email-form" class="form-group col-lg-12">
          <label>Email Address</label>
          <input type="email" name="" class="form-control" id="email-input" value="">

          <p id="email-feedback" class=""></p>
          <small id="email-additional-feedback" class="form-text text-muted"></small>
        </div>

        <div id="email-repeat-form" class="form-group col-lg-12">
          <label>Repeat Email Address</label>
          <input type="email" name="" class="form-control" id="repeat-email-input" value="">
          <small id="email-repeat-feedback" class=""></small>
        </div>

        <div id="password-form" class="form-group col-lg-12">
          <label>Password</label>
          <input type="password" name="" class="form-control" id="password-input" value="">
          <small id="password-feedback" class=""></small>
        </div>

        <div id="repeat-password-form" class="form-group col-lg-12">
          <label>Repeat Password</label>
          <input type="password" name="" class="form-control" id="repeat-password-input" value="">
          <small id="repeat-password-feedback" class=""></small>
        </div>
      </div>
      <div class="col-md-6">
        <button type="submit" class="btn btn-primary signup">Register</button>
      </div>
    </div>
  </section>
</div>